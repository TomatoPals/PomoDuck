{
  "name": "pomo-duck",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.2",
    "bootstrap": "^4.6.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "ci:test": "react-scripts test --ci --coverage && codecov",
    "eject": "react-scripts eject",
    "docker:build:dev": "docker build -t pomoduck:v0.1.0-dev -f build/Dockerfile.dev .",
    "docker:tag:dev": "docker tag pomoduck:v0.1.0-dev registry.digitalocean.com/pomoduck/pomoduck:v0.1.0-dev",
    "docker:push:dev": "docker push registry.digitalocean.com/pomoduck/pomoduck:v0.1.0-dev"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "codecov": "^3.8.1",
    "make": "^0.8.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/reportWebVitals.js",
      "!<rootDir>/src/setupTests.js"
    ]
  }
}
